{
  "extends": [
    "./eslint-config-base.json",
    "@mapbox/eslint-config-mapbox/react",
    "@mapbox/eslint-config-mapbox/import",
    "@mapbox/eslint-config-mapbox/promise",
    "plugin:es/no-2018",
    "plugin:es/no-2017",
    "plugin:es/no-2016",
    "plugin:es/no-2015",
    "plugin:compat/recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "MapboxPageShell": true
  },
  "plugins": ["react", "es"],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",

    "prefer-const": "off",
    "react/no-deprecated": "off",
    "react/no-string-refs": "off",
    "react/no-access-state-in-setstate": "off",
    "react/jsx-boolean-value": "off",
    "es/no-modules": "off",
    "es/no-block-scoped-variables": "off",
    "es/no-arrow-functions": "off",
    "es/no-classes": "off",
    "es/no-template-literals": "off",
    "es/no-property-shorthands": "off",
    "es/no-destructuring": "off",
    "es/no-default-parameters": "off",

    "spaced-comment": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
